@model Customer
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="container">
    <h1>This is Customer index</h1>
    <form method="post">
        <div class="form-row">
            <div class="form-group ">
                <label for="name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label for="inputPassword4">Phone Number</label>
                <input type="text" class="form-control" asp-for="PhoneNo" placeholder="phone no">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="1234 Main St">
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
<partial name="/Views/Shared/PartialViews/Customer/_CustomerList.cshtml" model="@Model.Customers"/>

@section Scripts{ 
<script src="~/js/customer/customer-create.js"></script>
}

@section Styles{ 
<link href="~/css/customer/customer-create.css" type="text/css" rel="stylesheet"/>
}